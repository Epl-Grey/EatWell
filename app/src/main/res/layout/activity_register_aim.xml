<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterAimActivity">

    <RelativeLayout
        android:background="@drawable/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/listItem"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="180dp"
            android:layout_marginRight="180dp"
            android:foregroundGravity="center"
            android:background="@drawable/list1"/>

        <TextView
            android:id="@+id/register"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:text="Регистрация"
            android:textSize="32sp"
            android:layout_marginLeft="25dp"
            android:layout_below="@+id/listItem"
            android:fontFamily="@font/montserrt4"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/aim"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="40dp"
            android:text="Ваша цель"
            android:textSize="20sp"
            android:layout_marginLeft="25dp"
            android:layout_below="@+id/register"
            android:fontFamily="@font/montserrt4"
            android:textColor="@color/white"
            />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn1"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginTop="250dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:text="1. Потеря веса"
                android:textAllCaps="false"
                android:textAlignment="textStart"
                android:textSize="25sp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn2"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginTop="330dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:textAllCaps="false"
            android:text="2. Сохранение веса"
            android:textAlignment="textStart"
            android:textSize="25sp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn3"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginTop="410dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:textAllCaps="false"
            android:text="3. Набор мышечной массы"
            android:textAlignment="textStart"
            android:textSize="20sp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnNext"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:layout_marginTop="660dp"
            android:layout_marginLeft="250dp"
            android:textAllCaps="false"
            android:text="Далее"
            android:textSize="20sp"
            android:visibility="invisible"/>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>