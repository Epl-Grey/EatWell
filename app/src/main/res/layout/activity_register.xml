<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/background"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/list4_w"
            />
        <TextView
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Регистрация"
            android:textColor="@color/white"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/montserrt4"
            android:textSize="32dp"
            android:gravity="center"
            />

        <EditText
            android:id="@+id/login_edittext"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_below="@id/login"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="130dp"
            android:background="@drawable/edt"
            android:fontFamily="@font/montserrt4"
            android:gravity="center"
            android:hint="Логин"
            android:inputType="text"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/password_edittext"
            android:layout_width="match_parent"
            android:layout_below="@id/login_edittext"
            android:layout_marginTop="20dp"
            android:layout_height="45dp"
            android:background="@drawable/edt"
            android:hint="Пароль"
            android:gravity="center"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:fontFamily="@font/montserrt4"
            android:maxLines="1"
            android:inputType="textVisiblePassword"
            android:layout_marginHorizontal="40dp"
            />

        <EditText
            android:id="@+id/repeat_password_edittext"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@id/password_edittext"
            android:layout_marginHorizontal="40dp"
            android:background="@drawable/edt"
            android:gravity="center"
            android:textColor="@color/white"
            android:fontFamily="@font/montserrt4"
            android:textColorHint="@color/white"
            android:layout_marginTop="20dp"
            android:hint="Повторите пароль"
            android:inputType="textVisiblePassword"
            android:maxLines="1"
            android:textSize="20dp" />

        <Button
            android:id="@+id/register_button"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="Завершить"
            android:background="@drawable/whitebtn"
            android:layout_below="@id/repeat_password_edittext"
            android:textSize="20dp"
            android:fontFamily="@font/montserrt4"
            android:textAllCaps="false"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="60dp"/>


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>